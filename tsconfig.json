{
	"compilerOptions": {
		"incremental": true,
		"target": "ES2017",
		"jsx": "preserve",
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"baseUrl": ".",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"paths": {
			"@/*": [
				"./src/*"
			],
			"#/*": [
				"./contents/*"
			]
		},
		"resolveJsonModule": true,
		"allowJs": false,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
